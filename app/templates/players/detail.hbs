{{title model.name}}
{{#paper-card as |card|}}
    <div class="layout-column flex-xs flex-gt-xs-50">
      {{#if model.profile_image}}
        {{card.image src=model.profile_image alt=model.name title=model.name}}
      {{/if}}
    </div>

    <div class="layout-row">
      {{#card.title as |title|}}
        {{#title.text as |text|}}

          {{#text.headline}}
            {{model.name}} {{model.last_name}}
          {{/text.headline}}

          {{#text.headline}}
              <em>"{{model.nick_name}}"</em>
          {{/text.headline}}

          {{#text.subhead}}
              <strong>Equipo:</strong> {{model.team_id.name}}
          {{/text.subhead}}

          {{#text.subhead}}
              <strong>NÃºmero:</strong> {{model.number}}
          {{/text.subhead}}
            <div class="layout-row">
              {{#if model.vegetarian}}
                  <img src="/assets/images/carrot.png" style="height:30px;width:auto">
              {{/if}}
              {{#if model.camping}}
                  <img src="/assets/images/camping.jpg" style="height:30px;width:auto">
              {{/if}}
            </div>
        {{/title.text}}
      {{/card.title}}

      {{#card.actions class="layout-column"}}
        {{#paper-button iconButton=true accent=true}}
          {{paper-icon "favorite"}}
        {{/paper-button}}

        {{#paper-button iconButton=true primary=true}}
          {{paper-icon "share"}}
        {{/paper-button}}
      {{/card.actions}}
    </div>

    {{#card.content}}
    {{!Este es el bloque de descripcion}}
        <p>{{model.description}}</p>
        {{#paper-list}}
          {{#paper-subheader}}Estadisticas{{/paper-subheader}}
          {{#each model.players as |statistics|}}
            {{#paper-item class="md-3-line"}}
                contenido de sus estadisticas
            {{/paper-item}}
          {{/each}}
        {{/paper-list}}
    {{/card.content}}
{{/paper-card}}
