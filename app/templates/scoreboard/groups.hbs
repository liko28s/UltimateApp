<div id="scoreboard-detail-dialog">
</div>
{{#if showDialog}}
  {{#paper-dialog
    onClose=(action "closeDialog" "cancel")
    parent="#scoreboard-detail-dialog"
    fullScreen=true
    clickOutsideToClose=true}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
          <h2>{{team.name}}</h2>
          <span class="flex"></span>
          {{#paper-button iconButton=true onClick=(action "closeDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-dialog-content}}

      {{#each team.matches as |match|}}
        {{paper-divider}}
        {{#paper-list}}
          {{#paper-item}}
              <div class="layout-row">
                  <div class="layout-xs-column" align="center">
                      <div class="layout-row">
                          <img src={{team.profile_image}} alt={{item.name}} class="md-avatar" width="40" height="40">
                          <h3><strong><b>{{team.name}}</b></strong></h3>
                      </div>
                    {{match.goals}}
                  </div>
                  <div style="vertical-align: center">
                      VS
                  </div>
                  <div class="layout-xs-column"  align="center">
                      <div class="layout-row">
                          <strong><h3><b>{{match.opponent.name}}</b></h3></strong>
                          <img src={{match.opponent.profile_image}} alt={{match.opponent.name}} class="md-avatar" width="40" height="40">
                      </div>
                    {{match.opponent_goals}}
                  </div>
              </div>
          {{/paper-item}}

        {{/paper-list}}
      {{/each}}
    {{/paper-dialog-content}}
  {{/paper-dialog}}
{{/if}}
