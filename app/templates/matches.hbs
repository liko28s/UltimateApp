{{title "Juegos en Curso"}}
{{#each model as |match|}}
  {{#paper-card as |card|}}
    {{!card.image src="washedout-70b84b894d88b367d49d56a8cd808cca.png" alt="Washed Out" title="Washed Out"}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}
          {{#paper-list align=center class="layout-row"}}
            {{#paper-item class="layout-row"}}
                <img src={{match.team_one.image}} alt={{match.team_one.name}} class="md-avatar">
                <div class="md-list-item-text">{{match.team_one.name}}</div>
            {{/paper-item}}

            {{#paper-item class="md-1-line"}}
                VS
            {{/paper-item}}

            {{#paper-item class="layout-row"}}
                <div class="md-list-item-text">{{match.team_two.name}}</div>
                <img src={{match.team_two.image}} alt={{match.team_two.name}} class="md-avatar">
            {{/paper-item}}

          {{/paper-list}}
        {{/text.headline}}
      {{/title.text}}
    {{/card.title}}
    {{#card.content}}
      {{#paper-list}}
        {{#paper-item}}
          Gol
        {{/paper-item}}
        {{#paper-item}}
            falta
        {{/paper-item}}
        {{#paper-item}}
            tiro
        {{/paper-item}}
      {{/paper-list}}

    {{/card.content}}
    {{#card.actions}}
    {{/card.actions}}
  {{/paper-card}}

{{else}}
    <h3 align="center">No Hay Partidos en Curso</h3>
{{/each}}
